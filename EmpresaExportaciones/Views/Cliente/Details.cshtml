@model EmpresaExportaciones.Models.Cliente

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-4">
    <!-- Centra y agrega un poco de espacio en la parte superior -->
    <h1 class="text-center display-4">Detalles del Registro</h1>

    <div>
        <h4 class="text-center">Cliente</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.dniCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.dniCliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.nombreCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nombreCliente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.apellidoCliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.apellidoCliente)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-4">
        <!-- Alinea al centro y agrega un poco de espacio en la parte superior -->
        <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-azul">Editar</a> |
        <a asp-action="Index" class="btn btn-azul">Volver a la lista</a>
    </div>
</div>
